<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaDificuldade">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/group_1__1_" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="239dp"
    android:layout_centerHorizontal="true"
    android:text="ESCOLHA O NÍVEL"
    android:fontFamily="@font/luckiest_guy"
    android:textColor="@color/azulPrincipal"
    android:textSize="35sp" />

    <Button
        android:id="@+id/botaoFacil"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="309dp"
        android:backgroundTint="@color/azulPrincipal"
        android:backgroundTintMode="add"
        android:fontFamily="@font/luckiest_guy"
        android:gravity="center"
        android:onClick="irTelaJogos"
        android:text="FÁCIL"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/botaoMedio"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="399dp"
        android:backgroundTint="@color/azulPrincipal"
        android:backgroundTintMode="add"
        android:fontFamily="@font/luckiest_guy"
        android:gravity="center"
        android:onClick="irTelaJogos"
        android:text="MÉDIO"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/botaoDificil"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="489dp"
        android:backgroundTint="@color/azulPrincipal"
        android:backgroundTintMode="add"
        android:fontFamily="@font/luckiest_guy"
        android:gravity="center"
        android:onClick="irTelaJogos"
        android:text="DIFÍCIL"
        android:textColor="@color/white"
        android:textSize="22sp" />
</RelativeLayout>